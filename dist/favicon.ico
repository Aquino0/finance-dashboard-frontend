from PIL import Image, ImageDraw

# Criação de um ícone simples 32x32 com fundo branco e um cifrão no centro
favicon_size = (32, 32)
image = Image.new("RGBA", favicon_size, (255, 255, 255, 0))
draw = ImageDraw.Draw(image)

# Desenhar um cifrão simples (como símbolo de finanças)
draw.text((8, 8), "$", fill=(0, 128, 0, 255))  # verde escuro

# Salvar como favicon.ico
favicon_path = "/mnt/data/favicon.ico"
image.save(favicon_path, format="ICO")

favicon_path
